                  <%= f.label 'Contraseña' %>
                  <%= f.password_field :password %>
              </div>
            </div>
            <div id='button'>
              <div class="actions">
                  <%= f.submit 'Iniciar sesión'%>

              </div>
            </div>
          <% end %>



        </div>
        
        
      </div>

